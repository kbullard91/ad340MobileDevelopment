<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="karibullard.com.ad340App">
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name="karibullard.com.ad340App.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- A child of the main activity -->
        <activity
            android:name="karibullard.com.ad340App.DisplayAbout"
            android:parentActivityName="karibullard.com.ad340App.MainActivity" >
            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="karibullard.com.ad340App.MainActivity" />
        </activity>
        <!-- A child of the main activity -->
        <activity
            android:name="karibullard.com.ad340App.DisplayInfoList"
            android:parentActivityName="karibullard.com.ad340App.MainActivity" >
            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="karibullard.com.ad340App.MainActivity" />
        </activity>
        <!-- A child of the main activity -->
        <activity
            android:name="karibullard.com.ad340App.DisplayMessageActivity"
            android:parentActivityName="karibullard.com.ad340App.MainActivity" >
            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="karibullard.com.ad340App.MainActivity" />
        </activity>
    </application>
</manifest>